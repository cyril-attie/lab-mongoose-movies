<h2>Celebrities List</h2>
<div>
  {{#each celebrities}}
  <a href="celebrity/{{this._id}}">{{this.name}}</a><br>
  <form action="celebrities/{{this._id}}/delete" method="post">
    <button type="submit">Delete</button>
  </form>
  {{/each}}
</div>
<div id="add-new">
  <a href="/celebrities/new">Add new celebrity</a>
</div>
{{err}}